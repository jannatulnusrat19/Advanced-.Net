
@{
    ViewBag.Title = "Create";
}

<h2>Update</h2>
@if (Model != null)
{
    <h1>@Model.Name</h1>
}
<form action="" method="post">
    <label for="id">ID: </label>
    <input type="text" name="ID" value="@(Model != null ? Model.ID : "")" class="form-control" />
    @Html.ValidationMessage("ID", new { @class = "text-danger" })<br>
    <label for="name">Name: </label>
    <input type="text" name="Name" value="@(Model != null ? Model.Name : "")" class="form-control" />
    @Html.ValidationMessage("Name", new { @class = "text-danger" })<br>
    <label for="fname">Email: </label>
    <input type="text" name="Email" value="@(Model != null ? Model.Email : "")" class="form-control" />
    @Html.ValidationMessage("Email", new { @class = "text-danger" })<br>
    <label for="cgpa">Date of Birth: </label>
    <input type="text" name="Date_of_Birth" value="@(Model != null ? Model.Date_of_Birth : "")" class="form-control" />
    @Html.ValidationMessage("Date_of_Birth", new { @class = "text-danger" })<br>
    <label for="Address">Address: </label>
    <input type="text" name="Address" value="@(Model != null ? Model.Address : "")" class="form-control" />
    @Html.ValidationMessage("Address", new { @class = "text-danger" })<br>
    <label for="Mobile_Number">Mobile Number: </label>
    <input type="text" name="Mobile_Number" value="@(Model != null ? Model.Mobile_Number : "")" class="form-control" />
    @Html.ValidationMessage("Mobile_Number", new { @class = "text-danger" })<br>
    <input type="Submit" class="btn btn-success" />
</form>

